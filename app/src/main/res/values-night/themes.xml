<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DarkApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="colorPrimary">@color/itemNavColor</item>
        <item name="windowActionBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navDrawerBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">false</item>
        <item name="drawerArrowStyle">@style/drawerToggle</item>
    </style>

    <style name="Theme.DarkApp.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorControl</item>
    </style>

    <!--Custom the text on Bottom Navigation-->
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.DarkApp.NoActionBar" />

    <style name="AddDataTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="cardBackgroundColor">@color/createOrSignInAccountBg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splashScreenBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/splashScreenBg</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF6060</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerToggle</item>
    </style>

</resources>