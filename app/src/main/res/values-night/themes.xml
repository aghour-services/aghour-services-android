<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DarkApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="colorPrimary">@color/itemNavColor</item>
        <item name="windowActionBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navDrawerBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="drawerArrowStyle">@style/drawerToggle</item>
    </style>

    <style name="Theme.DarkApp.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorControl</item>
    </style>

    <!--Custom the text on Bottom Navigation-->
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.DarkApp.NoActionBar" />

    <style name="AddDataTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="cardBackgroundColor">@color/createOrSignInAccountBg</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splashScreenBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/splashScreenBg</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
        <item name="android:background">@drawable/news_card_ripple</item>
        <item name="android:textColor">@color/dialogText</item>
    </style>

    <style name="drawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerToggle</item>
    </style>

    <!--All Text Font Style-->
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cairo_black</item>
    </style>

    <style name="SegoeTextRegular" parent="android:Widget.TextView">
        <item name="fontFamily">@font/segoe_ui_regular</item>
    </style>

    <style name="SegoeTextBold" parent="android:Widget.TextView">
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">25sp</item>
    </style>

    <!--All Text Buttons Font Style-->
    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/cairo_black</item>
    </style>

</resources>