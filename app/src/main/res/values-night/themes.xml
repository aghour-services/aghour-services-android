<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DarkApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navBarColor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.DarkApp.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorControl</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.DarkApp.NoActionBar">
    </style>

    <style name="AddDataTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splashScreenBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/splashScreenBg</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:radioButtonStyle">@color/alertBtnBg</item>
        <item name="android:textColorPrimary">@color/alertTxtColor</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
    </style>

</resources>
