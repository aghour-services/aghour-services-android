<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application light theme. -->
    <style name="Theme.LightApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/toolbarBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="drawerArrowStyle">@style/drawerToggle</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="background">@color/recyclerViewBg</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Headline6</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/toolbarBg</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="Theme.LightApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.LightApp.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AddDataTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="cardBackgroundColor">@color/createOrSignInAccountBg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splashScreenBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/splashScreenBg</item>
        <item name="android:navigationBarColor">@color/splashScreenBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerToggle</item>
    </style>

</resources>