<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application light theme. -->
    <style name="Theme.LightApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/toolbarBg</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navDrawerBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="drawerArrowStyle">@style/drawerToggle</item>
    </style>

    <style name="Theme.LightApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CategoriesTheme" parent="Theme.LightApp.NoActionBar" >
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AddDataTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/toolbarBg</item>
        <item name="cardBackgroundColor">@color/createOrSignInAccountBg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splashScreenBg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/splashScreenBg</item>
        <item name="android:navigationBarColor">@color/splashScreenBg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="drawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerToggle</item>
    </style>

</resources>