<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.aghourservices.ui.fragment.CategoriesFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_firmsFragment"
            app:destination="@id/firmsFragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_enter_pop"
            app:popExitAnim="@anim/fragment_exit_pop" />
        <argument
            android:name="category_id"
            app:argType="integer" />
        <argument
            android:name="category_name"
            app:argType="string" />
        <action
            android:id="@+id/action_categoriesFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.aghourservices.ui.fragment.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.aghourservices.ui.fragment.ArticleFragment"
        android:label="@string/menu_news"
        tools:layout="@layout/fragment_articles">
        <action
            android:id="@+id/action_newsFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_newsFragment_to_editArticleFragment"
            app:destination="@id/editArticleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_newsFragment_to_usersLikesFragment"
            app:destination="@id/usersLikesFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.aghourservices.ui.fragment.FavoriteFragment"
        android:label="@string/menu_fav"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/firmsFragment"
        android:name="com.aghourservices.ui.fragment.FirmsFragment"
        android:label="FirmsFragment"
        tools:layout="@layout/fragment_firms">
        <argument
            android:name="category_id"
            app:argType="integer" />
        <argument
            android:name="category_name"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.aghourservices.ui.fragment.CommentsFragment"
        android:label="CommentsFragment"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="article_id"
            app:argType="integer" />
        <argument
            android:name="user_name"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <action
            android:id="@+id/action_commentsFragment_to_updateCommentFragment"
            app:destination="@id/updateCommentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/updateCommentFragment"
        android:name="com.aghourservices.ui.fragment.EditCommentFragment"
        android:label="UpdateCommentFragment"
        tools:layout="@layout/fragment_edit_comment">
        <argument
            android:name="article_id"
            app:argType="integer" />
        <argument
            android:name="commentId"
            app:argType="integer" />
        <argument
            android:name="commentBody"
            app:argType="string" />
        <argument
            android:name="commentUser"
            app:argType="string" />
        <action
            android:id="@+id/action_updateCommentFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/editArticleFragment"
        android:name="com.aghourservices.ui.fragment.EditArticleFragment"
        android:label="EditArticleFragment"
        tools:layout="@layout/fragment_edit_article">
        <argument
            android:name="articleId"
            app:argType="integer" />

        <argument
            android:name="articleDescription"
            app:argType="string" />

        <argument
            android:name="articleUserName"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/usersLikesFragment"
        tools:layout="@layout/fragment_users_likes"
        android:name="com.aghourservices.ui.fragment.UsersLikesFragment"
        android:label="UsersLikesFragment" >

        <argument
            android:name="article_id"
            app:argType="integer" />

        <argument
            android:name="likes_count"
            app:argType="integer" />

        <argument
            android:name="article_liked"
            app:argType="boolean"
            android:defaultValue="false" />

    </dialog>
</navigation>