<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.aghourservices.ui.fragment.CategoriesFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_firmsFragment"
            app:destination="@id/firmsFragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_enter_pop"
            app:popExitAnim="@anim/fragment_exit_pop" />
        <action
            android:id="@+id/action_categoriesFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.aghourservices.ui.fragment.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.aghourservices.ui.fragment.NewsFragment"
        android:label="@string/menu_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_commentsFragment"
            app:destination="@id/commentsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.aghourservices.ui.fragment.FavoriteFragment"
        android:label="@string/menu_fav"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/firmsFragment"
        android:name="com.aghourservices.ui.fragment.FirmsFragment"
        android:label="FirmsFragment"
        tools:layout="@layout/fragment_firms">
        <argument
            android:name="category_id"
            app:argType="integer" />
        <argument
            android:name="category_name"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <action
        android:id="@+id/action_categoriesFragment"
        app:destination="@id/categoriesFragment"
        app:enterAnim="@anim/fragment_enter"
        app:exitAnim="@anim/fragment_exit"
        app:popEnterAnim="@anim/fragment_enter_pop"
        app:popExitAnim="@anim/fragment_exit_pop"
        app:popUpTo="@id/categoriesFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_searchFragment"
        app:destination="@id/searchFragment"
        app:enterAnim="@anim/fragment_enter"
        app:exitAnim="@anim/fragment_exit"
        app:popEnterAnim="@anim/fragment_enter_pop"
        app:popExitAnim="@anim/fragment_exit_pop"
        app:popUpTo="@id/categoriesFragment" />

    <action
        android:id="@+id/action_addDataFragment"
        app:destination="@id/addDataFragment"
        app:enterAnim="@anim/fragment_enter"
        app:exitAnim="@anim/fragment_exit"
        app:popEnterAnim="@anim/fragment_enter_pop"
        app:popExitAnim="@anim/fragment_exit_pop"
        app:popUpTo="@id/categoriesFragment" />

    <action
        android:id="@+id/action_favoriteFragment"
        app:destination="@id/favoriteFragment"
        app:enterAnim="@anim/fragment_enter"
        app:exitAnim="@anim/fragment_exit"
        app:popEnterAnim="@anim/fragment_enter_pop"
        app:popExitAnim="@anim/fragment_exit_pop"
        app:popUpTo="@id/categoriesFragment" />

    <action
        android:id="@+id/action_newsFragment"
        app:destination="@id/newsFragment"
        app:enterAnim="@anim/fragment_enter"
        app:exitAnim="@anim/fragment_exit"
        app:popEnterAnim="@anim/fragment_enter_pop"
        app:popExitAnim="@anim/fragment_exit_pop"
        app:popUpTo="@id/categoriesFragment" />
    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.aghourservices.ui.fragment.CommentsFragment"
        android:label="CommentsFragment"
        tools:layout="@layout/fragment_comments">

        <argument
            android:name="article_id"
            app:argType="integer" />
    </fragment>
</navigation>