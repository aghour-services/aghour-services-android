<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="12dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/firm_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/cairo_bold"
            android:gravity="right"
            android:text="Name"
            android:textColor="@color/blue"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/cairo_black"
            android:gravity="right"
            android:text="Category"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_bold"
                android:gravity="right"
                android:text="Address"
                android:textColor="@color/green1"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@mipmap/location" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_bold"
                android:gravity="right"
                android:text="Description"
                android:textColor="@color/gray"
                android:textSize="13sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@mipmap/description" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/orange_selector"
            android:drawableLeft="@drawable/ic_orange"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="01287303441"
            android:textAlignment="center"
            android:textColor="#ED6439"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/etisalat_selector"
            android:drawableLeft="@drawable/ic_etisalat"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="01187303441"
            android:textAlignment="center"
            android:textColor="@color/etisalat"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/vodafone_selector"
            android:drawableLeft="@drawable/ic_vodafone"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="0108194052"
            android:textAlignment="center"
            android:textColor="@color/vodafone"
            android:textSize="17sp" />

        <FrameLayout
            android:id="@+id/ad_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>