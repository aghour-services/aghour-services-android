<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/firm_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/cairo_bold"
            android:gravity="right"
            android:text="Name"
            android:textColor="@color/blue"
            android:textSize="23sp" />




            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/cairo_bold"
                android:gravity="right"
                android:text="Address"
                android:textColor="@color/green1"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded"
                app:drawableRightCompat="@mipmap/location" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/cairo_bold"
                android:gravity="right"
                android:text="Description"
                android:textColor="@color/gray"
                android:textSize="13sp"
                app:drawableRightCompat="@mipmap/description" />


        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_phone_call"
            android:gravity="center"
            android:padding="10dp"
            android:text="01207083552"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck" />

        <FrameLayout
            android:id="@+id/ad_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>