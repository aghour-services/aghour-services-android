<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingsBg"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/settingsToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbarBg">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_margin="4dp"
                    android:background="@drawable/about_app_back_ripple"
                    android:padding="12dp"
                    android:src="@drawable/ic_back_settings" />

                <TextView
                    android:id="@+id/toolBarTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:paddingRight="45dp"
                    android:text="@string/setting_fragment"
                    android:textColor="@color/toolbarText"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/first_line"
            android:layout_below="@id/appBarLayout"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/dialogText"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:drawableLeftCompat="@drawable/ic_edit"
                    app:drawableTint="@color/dialogText" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@mipmap/user"
                    app:civ_border_color="@color/Gray"
                    app:civ_border_width="5dp"
                    tools:src="@mipmap/user" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_user_image_card"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignRight="@id/avatar_image"
                    android:layout_alignBottom="@id/avatar_image"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:cardBackgroundColor="@color/Gray"
                    app:cardCornerRadius="50dp">

                    <ImageButton
                        android:id="@+id/add_user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_camera"
                        app:tint="@color/black"
                        tools:targetApi="o" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/dialogText"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:drawableLeftCompat="@drawable/ic_verified"
                app:drawableTint="@color/colorPrimary"
                tools:text="Mohamed Magdy" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialogText"
                android:textSize="@dimen/_9ssp"
                tools:text="mohamedmagdysaber@gmail.com" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialogText"
                android:textSize="@dimen/_9ssp"
                tools:text="01287303441" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBarLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@mipmap/user"
                android:src="@mipmap/user"
                app:civ_border_color="@color/Gray"
                app:civ_border_width="5dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/create_acount"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/create_accountBtn"
                android:textColor="@color/dialogText"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/create_account_layout"
            android:layout_gravity="center"
            android:background="@color/lineView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/contact_us"
            android:layout_below="@id/first_line"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/settings_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/appTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_selector"
                    android:orientation="horizontal"
                    android:padding="@dimen/settingItempd">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center"
                        android:src="@mipmap/dark_mode" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:gravity="end"
                        android:text="@string/theme_app"
                        android:textColor="@color/dialogText"
                        android:textSize="@dimen/settings_text"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_selector"
                    android:orientation="horizontal"
                    android:padding="@dimen/settingItempd">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center"
                        android:src="@mipmap/share" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:gravity="end"
                        android:text="@string/share_app"
                        android:textColor="@color/dialogText"
                        android:textSize="@dimen/settings_text"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_selector"
                    android:orientation="horizontal"
                    android:padding="@dimen/settingItempd">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:src="@mipmap/star" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:gravity="end"
                        android:text="@string/rate_app"
                        android:textColor="@color/dialogText"
                        android:textSize="@dimen/settings_text"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_app"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_selector"
                    android:orientation="horizontal"
                    android:padding="@dimen/settingItempd">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:src="@mipmap/about_us" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:gravity="end"
                        android:text="@string/about_app"
                        android:textColor="@color/dialogText"
                        android:textSize="@dimen/settings_text"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_selector"
                    android:orientation="horizontal"
                    android:padding="@dimen/settingItempd">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="23dp"
                        android:layout_gravity="start|center"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/ic_exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:gravity="end|center"
                        android:text="@string/log_out"
                        android:textColor="@color/dialogText"
                        android:textSize="@dimen/settings_text"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/constraintLayout"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp"
            android:weightSum="3"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="center"
                android:layout_weight="1.25"
                android:background="@color/lineView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="@string/connect_us"
                android:textAlignment="center"
                android:textColor="#FFA013"
                android:textSize="@dimen/settings_text" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="center"
                android:layout_weight="1.25"
                android:background="@color/lineView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearAdMob"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/linearAdMob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/facebook"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/contact_us_ripple"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_regular"
                    android:text="@string/facebook"
                    android:textColor="#3B5998"
                    android:textSize="@dimen/settings_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:background="@drawable/contact_us_ripple"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/gmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/segoe_ui_regular"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="#FF5722"
                    android:textSize="@dimen/settings_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsApp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/contact_us_ripple"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/whatsapp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/segoe_ui_regular"
                    android:gravity="center"
                    android:text="@string/whatsapp"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/settings_text"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearAdMob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:background="@color/adMobBg"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include layout="@layout/admob_banner" />
        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/profile_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/first_line"
            android:layout_below="@id/appBarLayout"
            android:layout_centerHorizontal="true">

            <include layout="@layout/profile_shimmer" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>
</ScrollView>
