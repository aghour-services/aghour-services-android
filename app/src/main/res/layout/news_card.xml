<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/news_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/firmsBg">

        <TextView
            android:id="@+id/popup_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/article_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/news_card_ripple"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/popup"
            android:textColor="@color/dialogText"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/popup_menu"
            android:background="?android:selectableItemBackground"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="16sp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:paddingRight="6dp"
                    android:textColor="@color/dialogText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Moahmed Magdy" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/time"
                    android:textSize="14sp"
                    app:drawableTint="@color/time"
                    tools:text="منذ ساعتين" />
            </LinearLayout>

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/user"
                android:textSize="13sp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <View
            android:id="@+id/under_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/user_layout"
            android:background="@color/lineView" />

        <LinearLayout
            android:id="@+id/article_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/under_line"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <kr.co.prnd.readmore.ReadMoreTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/news_card_ripple"
                android:gravity="right"
                android:maxEms="20"
                android:padding="14dp"
                android:textColor="@color/newsDescription"
                android:textColorLink="@color/textColorLink"
                android:textIsSelectable="false"
                android:textSize="16sp"
                app:readMoreColor="@color/colorPrimary"
                app:readMoreMaxLine="4"
                app:readMoreText="...رؤية المزيد"
                tools:text="@string/description" />

            <FrameLayout
                android:id="@+id/ad_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/news_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comments_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_layout"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lineView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/comments_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/comment_tv"
                    android:textColor="@color/dialogText"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/latest_comment_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/news_card_ripple"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comments">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/lattest_comment_card"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textColor="@color/dialogText"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="Moahmed Magdy" />

                            <TextView
                                android:id="@+id/body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxEms="17"
                                android:paddingTop="3dp"
                                android:textColor="@color/newsDescription"
                                android:textSize="14sp"
                                tools:text="Description" />

                            <TextView
                                android:id="@+id/comment_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/time"
                                android:textSize="11sp"
                                app:drawableTint="@color/time"
                                tools:text="منذ ساعتين" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/user"
                        android:textSize="13sp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comments_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/add_comment_bg"
            android:elevation="1dp"
            android:gravity="right|center"
            android:padding="12dp"
            android:paddingRight="12dp"
            android:text="@string/add_a_comment"
            android:textColor="@color/dialogText"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>