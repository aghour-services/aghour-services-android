<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/firmsBg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/news_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/news_card_ripple"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/newsDescription"
                android:textIsSelectable="false"
                android:textSize="15sp"
                tools:text="Description" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="4dp"
                android:gravity="right"
                android:textColor="@color/time"
                android:textIsSelectable="false"
                android:textSize="13sp"
                app:drawableRightCompat="@android:drawable/ic_lock_idle_alarm"
                app:drawableTint="@color/time"
                tools:text="time" />

            <FrameLayout
                android:id="@+id/ad_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/news_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_card_view">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lineView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shareNews"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right|center"
                    android:background="@drawable/share_ripple"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="@string/share_firm"
                    android:textAlignment="center"
                    android:textColor="@color/shareText"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_share"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/commentNews"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:background="@drawable/share_ripple"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/comment"
                    android:textAlignment="center"
                    android:textColor="@color/shareText"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_comment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>