<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recyclerViewBg"
    android:orientation="vertical"
    android:theme="@style/AddDataTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/firmsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerHorizontal="true"
            android:background="@color/toolbarBg"
            android:elevation="6dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/about_app_back_ripple"
                android:padding="10dp"
                android:src="@drawable/ic_back_settings" />

            <TextView
                android:id="@+id/toolBarTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/back_btn"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/add_article"
                android:textColor="@color/toolbarText"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/send_article"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-black"
                android:text="@string/publish_article"
                android:textColor="#008EFF"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_register"
            android:layout_below="@id/firmsToolbar"
            android:background="@android:color/transparent"
            android:elevation="1dp"
            android:gravity="right"
            android:hint="@string/add_article_hint"
            android:importantForAutofill="no"
            android:padding="20dp"
            android:textColorHint="@color/dialogText"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/settings_text">

            <requestFocus />
        </com.google.android.material.textfield.TextInputEditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ad_frame"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            android:background="@drawable/edt_text_background"
            android:elevation="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="@string/create_account_to_publish"
            android:textColor="@color/dialogText"
            android:textSize="@dimen/settings_text"
            android:textStyle="bold"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/ad_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/admob_banner" />
        </FrameLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>